{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
{{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.lastName) }}
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.email) }}
            {{ form_label(form.email) }}
            {% if valid %}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {% else %}
            {{ form_widget(form.email, {'attr': {'class': 'form-control is-invalid'}}) }}
            <div class="invalid-feedback">
                Cette adresse email est déjà utilisée
            </div>
            {% endif %}
            <small id="emailHelp" class="form-text text-muted">Votre adresse email ne sera pas partagée.</small>
        </div>
        <div class="form-group">
            {{ form_errors(form.password) }}
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.role) }}
            {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.role) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.school) }}
            {{ form_label(form.school) }}
            {{ form_widget(form.school, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_widget(form.signin, {'attr': {'class': 'btn btn-primary'}}) }}
        <small class="form-text text-muted">Tous les champs sont requis.</small>
{{ form_end(form) }}
</div>
{% endblock %}
