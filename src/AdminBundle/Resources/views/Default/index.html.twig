                        </div>
                    </div>
        </div>
    </div>
        <script>
            window.onload = function () {
                var chart = new CanvasJS.Chart("chartContainer", {
                    animationEnabled: true,
                    theme: "light2",
                    axisY:{
                        includeZero: false
                    },
                    data: [{
                        type: "line",
                        lineColor: "green",
                        markerColor:"green",

                        dataPoints: [
                            {% for item in chart %}
                            {label:'{{ item.creationDate | date("d/m")}}', y: {{ item.nbre }} },
                            {% endfor %}
                        ]
                    }]
                });
                chart.render();
            }
        </script>

{% endblock %}