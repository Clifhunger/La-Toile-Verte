{% trans_default_domain 'FOSUserBundle' %}
<div class="container connexion">
   <div class="row">
      <div class="col-lg-3">
      </div>
      <div class="col-lg-6 formConnexion">
         <h2 style="margin-top: 10px;">Formulaire de connexion</h2>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group label">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
    </div>
    <div class="form-group label">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" class="form-control"/>
    </div>
    <div class="form-group label">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" style="margin-right: auto;margin-left: auto;" />
    <br/>
    <a href="{{ path('fos_user_resetting_request') }}" >{{ 'resetting.request.submit'|trans }}</a>
</form>
      </div>
      <div class="col-lg-3">
      </div>
   </div>
</div>
{% block stylesheets %}
   <link rel="stylesheet" href="{{ asset('css/connexion.css')}}" />
{% endblock %}
